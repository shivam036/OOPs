#include <iostream>
using namespace std;

int main()
{
    cout<<"integer size is "<<sizeof(int)<<"bytes"<<endl;
    cout<<"float size is "<<sizeof(float)<<"bytes"<<endl;
    cout<<"char size is "<<sizeof(char)<<"bytes"<<endl;
    cout<<"double size is "<<sizeof(double)<<"bytes"<<endl;
   
    return 0;
}
